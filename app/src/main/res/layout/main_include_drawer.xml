<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_drawer"
    android:layout_gravity= "start"
    android:background="@color/white"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/logoutBtn"
        android:layout_gravity="end"
        android:layout_margin="20dp"
        android:text="로그아웃"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <include
        android:id="@+id/login_solo"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/main_drawer_login_solo"/>

    <include
        android:id="@+id/login_couple"
        android:visibility="invisible"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        layout="@layout/main_drawer_login_couple"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/inBookmark"
            android:text="북마크"
            android:background="@drawable/drawer_border_radius"
            android:textSize="15sp"
            android:gravity="center"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"/>

        <TextView
            android:id="@+id/inMyBoard"
            android:text="내가 작성한 글"
            android:gravity="center"
            android:textSize="15sp"
            android:layout_marginTop="10dp"
            android:background="@drawable/drawer_border_radius"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_width="match_parent"
            android:layout_height="50dp"/>


    </LinearLayout>



</LinearLayout>

